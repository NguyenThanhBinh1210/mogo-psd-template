mixin workItem(src,  type = false ,  title='creatively designed', desc='Lorem ipsum dolor sit ')
  if type == false
    .work-item
      img.work-image(src= src)
      .work-content 
        img(src= '../images/img-work-icon.png')
        h3.work-title= title
        span.work-desc.text.text--light= desc
