mixin menuLink(title, href= '#')
  li.header-menu-item 
    a.header-menu-link(href= href)= title  

mixin headerBottom(number, text)
  .header-bottom-item
    span.header-bottom-number= number
    span.header-bottom-text= text

mixin blockBox(caption, title, description)
  .block-box
    h3.block-box-caption= caption
    h2.block-box-title= title
    if description 
      p.block-box-description= description

mixin aboutItem(data) 
  .about-item 
    img.about-image(src= data.src, alt= data.alt)
    .about-content
      i.about-icon(class= data.iconClass)
      span.about-title= data.title

mixin wedoItem(src, title, iconDown, description, isActive='') 
  .wedo-item(class= isActive)
    .wedo-item-header 
      img(src= src).wedo-item-icon
      h3.wedo-item-title= title
      i.wedo-item-arrow(class= iconDown)
      i.wedo-item-arrow2.fal.fa-angle-up
    .wedo-item-content
      .wedo-item-text= description

mixin numberItem(data)
  .number-item 
    h4.number-item-count= data.number
    span.number-item-text= data.text

mixin serviceItem(src , alt= '', title, description)
  .service-item
    img.service-icon(src= src, alt=alt)
    .service-info
      .service-title= title
      .service-description= description

mixin teamItem(src , name, desc, href='') 
  .team-item
    .team-main 
      .team-image 
        img(src= src, alt="")
      .team-content
        ul.team-social
          li.team-social-item
            a.team-social-link(href= href) 
              i.fab.fa-facebook-f
          li.team-social-item
            a.team-social-link(href= href) 
              i.fab.fa-twitter
          li.team-social-item
            a.team-social-link(href= href) 
              i.fab.fa-pinterest
          li.team-social-item
            a.team-social-link(href= href) 
              i.fab.fa-instagram
    .team-info 
      h3.team-name= name
      span.team-desc= desc

